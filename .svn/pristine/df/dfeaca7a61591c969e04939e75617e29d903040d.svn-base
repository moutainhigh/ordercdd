<script>
    "use strict";
    app.controller("creditrepaymentListController",
        [
            "$rootScope",
            "$scope",
            "$http",
            "$stateParams",
            "entity",
            function ($rootScope, $scope, $http, $stateParams, entity) {

                $scope.states = [];

                /*搜索值的对象*/
                $scope.searchForms = {};

                $scope.forms = {};

                /*初始值*/
                $scope.forms.state_id = $scope.state_id;
                $scope.forms.size     = "10";
                $scope.forms.sort     = "id,desc";

                entity.getList("/rest/creditrepaymentWorkflows/ " + $stateParams.workflow_id + "/states").then(function (resResult) {
                    $scope.states = resResult._embeddedItems;
                    if ($scope.states.length > 0) {

                        $scope.states = $scope.states.sort(function (a, b) {
                            return a.sort - b.sort;
                        });

                        if (window.sessionStorage.getItem(window.myinfo.id + "creditrepayment_state_code")) {
                            angular.forEach($scope.states, function (val, key) {
                                if (val.id == window.sessionStorage.getItem(window.myinfo.id + "creditrepayment_state_code")) {
                                    $scope.stateVal       = $scope.states[key];
                                    $scope.forms.state_id = val.id;
                                    $scope.state_id       = val.id;
                                    $scope.getList(0);
                                }
                            })
                        } else {
                            $scope.forms.state_id = null;
                            $scope.getList(0);
                        }


//                        $scope.state_code = $scope.states[0].stateCode;
//                        $scope.getList(0);
                    }
                });


                $scope.pageList = {
                    size: 0,
                    total_elements: 0,
                    current_page: 0,
                    num_page: 1,
                    total_page: 1
                };

                $scope.list = [];

                $scope.getList = function (page) {

                    $scope.loading = true;

                    $scope.list = [];

                    $scope.forms.page = page;


                    $http.get("/creditrepayment/search", {
                        params: $scope.forms
                    }).success(function (resResult) {

                        $scope.loading = false;

                        $scope.list = entity.getListActs(resResult.entitys);

                        console.log($scope.list,'$scope.list')

                        if ($scope.list.length > 0) {
                            $scope.pageList = {
                                size: resResult.size,
                                total_elements: resResult.totalElements,
                                current_page: resResult.number,
                                num_page: resResult.totalPages,
                                total_page: resResult.totalPages
                            };
                        } else {
                            $scope.pageList = {
                                size: 0,
                                total_elements: 0,
                                current_page: 0,
                                num_page: 1,
                                total_page: 1
                            };
                        }

                        $rootScope.setPaginator("#creditrepayment_list_paginator", $scope.pageList, $scope.getList);
                    });
                };


                //状态
                $scope.stateChange = function (val) {
                    $scope.forms      = {};
                    $scope.forms.size = "10";
                    $scope.forms.sort = "id,desc";
                    if (val) {
                        window.sessionStorage.setItem(window.myinfo.id + "creditrepayment_state_code", val.id);

                        $scope.state_id = val.id;

                        $scope.forms.state_id = val.id;
                        // $scope.searchSubmit();
                    } else {
                        window.sessionStorage.setItem(window.myinfo.id + "creditrepayment_state_code", "");

                        $scope.state_id       = null;
                        $scope.forms.state_id = null;
                        // $scope.searchSubmit();
                    }
                };

                //                搜索
                $scope.searchSubmit = function () {

                    if($scope.searchForms.startDate){
                        $scope.searchForms.timeRangeKey = "debtorActualRepaymentDate";
                    }

                    if($scope.searchForms.endDate){
                        $scope.searchForms.timeRangeKey = "debtorActualRepaymentDate";
                    }

                    /*合并对象*/
                    $scope.forms = Object.assign($scope.searchForms, $scope.forms);

                    $scope.getList(0);

                };

                //清除搜索
                $scope.clearSearch = function () {
                    $scope.forms       = {};
                    $scope.searchForms = {};

                    if ($scope.state_id) {
                        $scope.forms.state_id = $scope.state_id;
                    } else {
                        $scope.forms.state_id = null;
                    }

                    $scope.forms.size = "10";
                    $scope.forms.sort = "id,desc";
                    $scope.getList(0);
                };

                $scope.startDateToday = function () {
                    $scope.searchForms.startDate = new Date();
                };

                $scope.startDateClear = function () {
                    $scope.searchForms.startDate = null;
                };

                $scope.endDateToday = function () {
                    $scope.searchForms.endDate = new Date();
                };

                $scope.endDateClear = function () {
                    $scope.searchForms.endDate = null;
                };

                $scope.openStart = function ($event) {
                    $event.preventDefault();
                    $event.stopPropagation();

                    $scope.startOpened = true;
                    $scope.endOpened   = false;
                };

                $scope.openEnd = function ($event) {
                    $event.preventDefault();
                    $event.stopPropagation();

                    $scope.startOpened = false;
                    $scope.endOpened   = true;
                };

                $scope.dateOptions = {
                    formatYear: "yy",
                    startingDay: 1,
                    class: "datepicker",
                    showWeeks:false
                };

            }
        ]
    );
</script>
