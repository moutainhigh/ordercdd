                                                   <!--placeholder="市">-->
                                        <!--</div>-->
                                    <!--</div>-->
                                <!--</div>-->
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        <span class="text-danger">*</span>
                                        <span translate="user.state.label"></span>
                                    </label>
                                    <div class="col-sm-8">
