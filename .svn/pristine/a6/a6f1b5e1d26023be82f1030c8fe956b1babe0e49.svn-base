 <div class="hbox hbox-auto-xs hbox-auto-sm">
        <div class="col w-md bg-light dk b-r bg-auto"  ng-controller="MessageCtrl">
            <div class="wrapper b-b bg">
                消息列表 <button class="btn btn-primary" ng-click="add_message()">add message</button>
            </div>
            <div class="wrapper hidden-sm hidden-xs cell scrollable hover" id="message_list_wrapper">
                <ul class="list-group no-bg no-borders pull-in">


                    <li class="list-group-item" ng-repeat="item in message_list">
                        <b class="badge bg-info pull-right">{{number}}</b>
                        <a href="#/message/{{item.id}}" class="pull-left thumb-sm avatar m-r">
                            <img ng-src="{{item.avatar}}" alt="..." class="img-circle">
                            <i class="on b-white bottom"></i>
                        </a>
                        <div class="clear">
                            <div><a href>{{item.name}}</a></div>
                            <small class="text-muted">{{item.last_message}}</small><br />
                            <small class="text-muted">{{item.time| fromNow }}</small>
                        </div>
                    </li>

                    <li class="list-group-item">
                        <a herf class="pull-left thumb-sm avatar m-r">
