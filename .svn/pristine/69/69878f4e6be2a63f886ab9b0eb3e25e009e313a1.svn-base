<div style="background: #F1F0F5;height: 100%">
    <div ng-if="loanShow">
        <div style="background: #fff">
            <div style="height: 97px;border-bottom: 1px solid #E5E5E5;position: relative" ng-click="toloanLogs()">
                <p style="color: #b3b3b3;text-align: center;font-size: 16px;padding-top: 20px;">剩余应还</p>
                <p style="text-align: center;font-size: 30px;margin-top: 10px;" id="repaymentAmount">{{planDate.leftAmount + overDueLeftAmount + overdueAmount}}</p>
                <span class="icon icon-108" style="font-size: 30px;position: absolute;top: 30px; right: 10px;color: #b5b5b5;z-index: 100"></span>
                <img ng-show="overDate" src="img/Group_Copy2.png" style="position: absolute;right: 20px; top: 9px;height: 80px;width: 80px;z-index: 50">
            </div>
            <div style="display: flex;height: 60px;">
                <div style="flex: 1;border-right: 1px solid #E5E5E5">
                    <p style="text-align: center;color: #b3b3b3;padding-top: 10px;font-size: 13px">本期应还</p>
                    <p style="text-align: center;padding-top: 5px;font-size: 20px;">{{planDate.fees}}</p>
                </div>
                <div style="flex: 1">
                    <p style="text-align: center;color: #b3b3b3;padding-top: 10px;font-size: 13px">未还本金</p>
                    <p style="text-align: center;padding-top: 5px;font-size: 20px;">{{allPrincipal}}</p>
                </div>
            </div>
        </div>

        <div style="margin-top: 15px;background: #fff;height: 90px;padding-left: 15px;">
            <div class="clearfix" style="height: 44px; border-bottom: 1px solid #E5E5E5;line-height: 44px;padding-right: 15px;">
                <div class="left">还款日</div>
                <div class="right">{{(planDate.debtorRepaymentDate).split('T')[0]}}<span ng-show="overDate" style="color: #f45e02;font-size: 14px;margin-left: 5px;">(逾期{{planDate.overdueDays}}天)</span></div>
            </div>
            <div class="clearfix" style="height: 45px;line-height: 45px;padding-right: 15px;">
                <div class="left">提前结清</div>
                <div class="right icon icon-108" style="color:#B5B5B5"></div>
            </div>
        </div>
        <div style="padding: 15px 0;background: #FEFCED;color: #F49456;text-align: center;border-top: 1px solid #E8E8E8;border-bottom: 1px solid #E8E8E8;" ng-click="toRepayMentPlan()">
            <p>查看全部还款计划</p>
        </div>

        <div style="padding: 0 15px;">
            <button style="margin-top:80px;" class="weui_btn weui_btn_primary" ng-click="loanFn()">立即还款</button>
        </div>
    </div>
    <div ng-if="!loanShow">
        <p style="text-align: center">暂无借款信息</p>
    </div>
</div>


<style>
    .font-color-dark{
       color:#a2a2a2
    }
    .border-warp{
        border-bottom: 1px solid #F0F0F0;
        padding: 15px 0;
    }
    .all-plan{

    }
</style>