<div class="wrapper b-b b-light clearfix" ng-if="canActs.length > 0">
    <button ng-class="act.btnClass"
            ng-click="storeadvanceExcute[act.actCode](profile)"
            tooltip="{{act.help}}"
            tooltip-placement="bottom"
            ng-repeat="act in canActs">
        <i ng-class="act.iconClass"></i> {{act.label}}
    </button>
</div>

<div class="wrapper">
    <div class="row">
        <div class="col-xs-12 col-sm-10">
            <div class="panel panel-info">
                <div class="panel-heading">
                    异常催收详情
                </div>
                <table class="table table-striped m-b-none">
                    <tbody>
                    <tr>
                        <td class="v-middle text-right w-sm">借款单号：</td>
                        <td class="v-middle w-xl">{{ profileDetail.loanSn }}</td>
                        <td class="v-middle text-right w-sm">客户名称:</td>
                        <td class="v-middle w-xl">{{ profileDetail.applyRealName }}</td>
                    </tr>
                    <tr>
                        <td class="v-middle text-right w-sm">联系方式：</td>
                        <td class="v-middle w-xl">{{ profileDetail.applyMobile }}</td>
                        <td class="v-middle text-right w-sm">服务门店:</td>
                        <td class="v-middle w-xl">{{ profileDetail.department.label }}</td>
                    </tr>
                    <tr>
                        <td class="v-middle text-right w-sm">到账状态：</td>
                        <td class="v-middle w-xl">{{ profileDetail.state.label }}</td>
                        <td class="v-middle text-right w-sm">垫付类型：</td>
                        <td class="v-middle w-xl">{{ profileDetail.type==='BADDEBT'?'坏账垫付':'逾期垫付' }}</td>
                    </tr>
                    <tr>
                        <td class="v-middle text-right w-sm">垫付金额：</td>
                        <td class="v-middle w-xl">{{ profileDetail.payableAmount?profileDetail.payableAmount:0 }}</td>
                        <td class="v-middle text-right w-sm">确认时间：</td>
                        <td class="v-middle w-xl">{{ profileDetail.payTime?(profileDetail.payTime | datetime):'无' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>